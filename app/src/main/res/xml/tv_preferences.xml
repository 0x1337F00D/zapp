<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:title="@string/activity_settings_title">

	<ListPreference
		android:defaultValue="live"
		android:entries="@array/available_tabs_names_tv"
		android:key="@string/pref_key_start_tab"
		android:title="@string/pref_start_tab_title"
		app:entryValues="@array/available_tabs_values_tv"
		app:useSimpleSummaryProvider="true" />

	<PreferenceCategory
		android:icon="@drawable/ic_live_tv_white_24dp"
		android:title="@string/pref_header_zattoo">

		<EditTextPreference
			android:key="@string/pref_key_zattoo_username"
			android:title="@string/pref_zattoo_username_title"
			app:useSimpleSummaryProvider="true" />

		<EditTextPreference
			android:key="@string/pref_key_zattoo_password"
			android:title="@string/pref_zattoo_password_title" />

	</PreferenceCategory>

</androidx.preference.PreferenceScreen>
